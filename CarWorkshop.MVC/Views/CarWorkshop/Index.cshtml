@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Warsztaty samochodowe</h1>

<p>
    <a asp-action="Create" class=" btn btn-secondary">Create New</a>
</p>

<div class="row">

    @if (!Model.Any())
    {
        <h1>Brak danych </h1>
    }

    @foreach (var item in Model)
    {
        //card
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class=" = card-title">@item.Name</h5>
                <h6 class=" = card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
                <a class="btn btn-primary" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName="@item.EncodedName">Info</a>
                <a class="btn btn-outline-secondary" asp-controller="CarWorkshop" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edycja</a>
            </div>
        </div>
    }
</div>

