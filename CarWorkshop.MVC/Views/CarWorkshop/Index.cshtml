@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Warsztaty samochodowe</h1>

<p>
    <a asp-action="Create" class=" btn btn-secondary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        //card
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class=" = card-title">@item.Name</h5>
                <h6 class=" = card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
                <a href="#" class="btn btn-primary">Info</a>
                <a href="#" class="btn btn-secondary">Edycja</a>
            </div>
        </div>
    }
</div>

