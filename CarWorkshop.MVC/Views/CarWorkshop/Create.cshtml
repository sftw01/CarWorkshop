@using CarWorkshop.Application.CarWorkshop;

@model CarWorkshopDto;
<h1>Create Car Workshop</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name">
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description">
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">About</label>
                <input class="form-control" type="text" asp-for="About">
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">Numer telefonu</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Street">Ulica</label>
                <input class="form-control" type="text" asp-for="Street">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="City">Miasto</label>
                <input class="form-control" type="City" asp-for="City">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PostalCode">Kod pocztowy</label>
                <input class="form-control" type="text" asp-for="PostalCode">
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>

        </form>
    </div>
</div>

 
