@model About

<h1>@Model.Title</h1>
<div class="alert alert-info" role="alert">@Model.Description</div>

<p>Tags:</p>

<ul>
@foreach(var tag in Model.Tags)
{
    
        <li>@tag</li>
}
</ul>


<div class="container text-center">
    <div class="row">
        <div class="col-sm-1 border alert alert-danger">
            Ilość
        </div>
        <div class="col-sm-1 border alert alert-info">
            ID
        </div>
        <div class="col-sm-4 border alert alert-success">
            Nazwa
        </div>
        <div class="col-sm-4 border alert alert-link">
            Opis
        </div>
        <div class="col-sm-2 border alert alert-secondary">
            Link
        </div>
    </div>
</div>